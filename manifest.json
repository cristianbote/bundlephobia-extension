{
    "name": "Bundlephobia Web Extension",
    "version": "1.0",
    "description": "Bundlephobia extension to check the size of a package.",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": "favicon-32x32.png"
    },
    "permissions": [
        "activeTab",
        "declarativeContent"
    ],
    "icons": {
        "32": "favicon-32x32.png"
    }
  }